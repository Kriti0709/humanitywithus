    <title>HMU | Registration</title>
    <link rel="icon" href="images/favicon-16x16.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      .header {
        overflow: hidden;
        background-color: lightskyblue;
        padding: 0px 20px;
      }
      .header a {
        float: left;
        color: rgb(90, 90, 231);
        text-align: center;
        font-weight: bold;
        padding: 12px;
        text-decoration: none;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 18px;
        line-height: 25px;
        border-radius: 4px;
        margin-top: 45px;
      }

      .header a.active:hover {
        color: black;
      }
      .header a.nonactive:hover {
        background-color: rgb(228, 227, 220);
        color: black;
      }
      .header a.active {
        font-size: 20px;
        border-radius: 30px;
        padding: 10px 40px;
        margin-right: 250px;
        background-color: rgb(90, 90, 231);
        color: white;
      }
      .header a.nonactive {
        font-size: 20px;
        border-radius: 30px;
        padding: 10px 40px;
      }

      .header-right {
        float: right;
      }

      @media screen and (max-width: 500px) {
        .header a {
          float: none;
          display: block;
          text-align: left;
        }
        .header-right {
          float: none;
        }
      }
      section {
        background-image: url("images/P11.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        background-color: rgb(252, 241, 225);
        text-align: center;
        height: 800px;
      }
      #font {
        background-color: rgb(177, 219, 245);
        color: black;
      }
      #box {
        background-color: lightskyblue;
        border-radius: 10px;
        padding: 10px 80px;
      }
      #dialog {
        background-color: lightskyblue;
        border-radius: 10px;
        padding: 20px, 20px;
        margin-top: 40px;
      }

      input {
        border: 2px;
        border-radius: 15px;
        padding: 10px;
        margin: 10px;
      }

      #name {
        width: 500px;
      }

      #name1 {
        border: 2px;
        border-radius: 15px;
        padding: 10px;
        padding-bottom: 40px;
        margin: 10px;
        width: 500px;
        font-family: Arial, Helvetica, sans-serif;
      }
      #submit {
        cursor: pointer;
        font-size: 15px;
        font-weight: bold;
        background-color: rgb(120, 120, 241);
        color: white;
        border-radius: 40px;
        padding: 10px 50px;
        margin: 30px;
      }
      #submit:hover {
        background-color: rgb(81, 81, 240);
        color: black;
      }
      .footer {
        background-color: rgb(53, 53, 53);
        color: white;
        text-align: center;
        font-family: Arial, Helvetica, sans-serif;
      }
      .f2 {
        font-size: 25px;
      }
      .fa {
        padding: 10px;
        font-size: 10px;
        width: 10px;
        text-align: center;
        text-decoration: none;
        border-radius: 50%;
        margin: 5px 2px;
      }

      .fa:hover {
        opacity: 0.7;
      }

      .fa-facebook {
        background: #3b5998;
        color: white;
      }

      .fa-instagram {
        background: #b4275d;
        color: white;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="header">
        <img src="images/128.ico" />
        <div class="header-right">
          <a class="nonactive" href="/">HOME</a>
          <a class="nonactive" href="/services">SERVICES</a>
          <a class="nonactive" href="/about">ABOUT US</a>
          <a class="nonactive" href="#contact us">CONTACT US</a>
          <a class="active" href="/contact">REGISTER NOW</a>
        </div>
      </div>
    </header>
    <section>
      <br />
      <br />
      <font id="font" style="font-weight: bold" size="6"
        >Take Your First Step Towards Humanity By</font
      ><br />
      <font id="font" style="font-weight: bold" size="6"
        >Registering With Us</font
      >
      <dialog open id="dialog">
        <form action="/contact" method="post">
          <table id="box" align="center" width="300" height="190">
            <tr>
              <td>
                <input
                  id="name"
                  type="text"
                  placeholder="Name*"
                  name="namee"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <input
                  id="name"
                  type="number"
                  placeholder="Phone No.*"
                  name="phoneno"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <input
                  id="name"
                  type="email"
                  placeholder="Email Id*"
                  name="email"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <input
                  id="name"
                  type="text"
                  placeholder="Organization Name*"
                  name="orgname"
                />
              </td>
            </tr>
            <tr>
              <td>
                <input
                  id="name"
                  type="text"
                  placeholder="Service Provided*"
                  name="servicee"
                  required
                />
              </td>
            </tr>
            <tr>
              <td>
                <textarea
                  class="textarea"
                  id="name1"
                  placeholder="Address Of Organization*"
                  name="addresss"
                ></textarea>
              </td>
            </tr>
            <tr>
              <td>
                
                <button id="submit" type="submit">Submit</button>
              </td>
            </tr>
          </table>
        </form>
      </dialog>
    </section>
    <footer>
      <div class="footer">
        <a class="f2" id="contact us">Contact Us</a><br><br>
        <a class="f3">8700392214 &nbsp; |&nbsp; 9873288191 &nbsp;| &nbsp; 8929573267</a><br><br>
        <a class="f3">humanitywithuss@gmail.com</a><br><br>
        <a href="https://www.facebook.com/Humanity-With-Us-104431332230016" class="fa fa-facebook"></a>
        <a href="https://instagram.com/humanitywithus?igshid=YmMyMTA2M2Y=" class="fa fa-instagram"></a><br><br>
      </div>
    </footer>
  </body>
</html>
